{
  "compilerOptions": {
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {},
    "esModuleInterop": true,
    "typeRoots" : ["./src/types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*", 
    "main.ts",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
